{% for name, vnet in vnets.items() %}
{% if vnet['vnet_network']['asn'] is defined %}

module "{{ name }}-vgw" {
  source                        = "{{ module_dir }}/vgw"
  providers                     = { aws = "aws.{{ vnet['vnet_network']['region'] }}"}
  name                          = "{{ name }}-vgw"
  vpc_id                        = "${module.{{ name }}-vpc.vpc_id}"
  amazon_side_asn               = "{{ vnet['vnet_network']['asn'] }}"
}

{% endif %}
{% endfor %}

