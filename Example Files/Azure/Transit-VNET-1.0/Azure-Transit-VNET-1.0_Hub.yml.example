#HUB File

#Define Firewalls
firewalls:
  - name: Hub-Firewalls
    vmcount: 1
    fwname: HubFW
    fwvmsize: Standard_D3_v2
    # https://knowledgebase.paloaltonetworks.com/KCSArticleDetail?id=kA10g000000ClD7CAK
    avsetname: "AzureAV"
    fw_version: latest
    # 7.1.0 / 8.0.0 / 8.1.0 = latest
    fw_sku: byol
    # byol / bundl1 / bundle2
    attach: "yes"
    Username: tstern
    Password: PaloAlto12345!

  - name: Spoke1-Firewalls
    vmcount: 1
    resource_group_name: spoke1
    fwname: Spoke1FW
    fwvmsize: Standard_D3_v2
    # https://knowledgebase.paloaltonetworks.com/KCSArticleDetail?id=kA10g000000ClD7CAK
    avsetname: "Spoke1AV"
    fw_version: latest
    # 7.1.0 / 8.0.0 / 8.1.0 = latest
    fw_sku: byol
    # byol / bundl1 / bundle2
    attach: no
    Username: tstern
    Password: PaloAlto12345!

#Define Load Balancers  
load_balancers:

  - name: Internal-LB
    fename: Trust
    bename: Trust
    floating_ip: true
    type: private
    lbrulename: HA
    lbrulefrontport: 0
    lbruleprotocol: All
    lbrulebackport: 0
    lbprobename: ssh
    lbruleprobeport: 22

# Define Virtual Networks
# IMPORTANT the first Network has to be the Firewall Network
# 1 Subnet = Management; 2 Subnet = Trust; 3 Subnet = Untrust; 4 Subnet = Application Gateway 
vnet_network:
  name: HubVnet
  # resource_group_name: TransitAzureFCA
  network: "10.0.0.0/16"
  subnet:
  - name: Management
    network: "10.0.0.0/24"
  - name: Trust
    network: "10.0.2.0/24"
  - name: Untrust
    network: "10.0.1.0/24"

#Define Security Groups
security_groups:
  - name: allow any
    priority: 100
    direction: inbound
    action: allow
    src_ip: 0.0.0.0
    src_port: any
    dst_port: any
    dst_network: 0.0.0.0
    protocol: any

